source 'https://rubygems.org'

# Specify your gem's dependencies in cfer.gemspec
gemspec

group :test do
  gem 'rspec'
  gem 'rspec-mocks'
  gem 'guard-rspec'
  gem 'coveralls', require: false
  gem "codeclimate-test-reporter", require: nil
end

group :debug do
  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-rescue'
  gem 'pry-stack_explorer'
  gem 'travis'
end
